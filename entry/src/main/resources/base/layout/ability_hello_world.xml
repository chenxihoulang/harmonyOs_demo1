<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:text"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:center_in_parent="true"
        ohos:text="$string:firstPage"
        ohos:text_color="$color:appbar_subtitle_color"
        ohos:text_size="32fp"/>

    <Button
        ohos:id="$+id:btnNavSlice"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_ability_hello_world"
        ohos:below="$id:text"
        ohos:center_in_parent="true"
        ohos:left_padding="70vp"
        ohos:margin="10vp"
        ohos:right_padding="70vp"
        ohos:text="$string:actionNext"
        ohos:text_color="#ffffff"
        ohos:text_size="19fp"
        ohos:top_padding="8vp"/>

    <Button
        ohos:id="$+id:btnNavAbility"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_ability_hello_world"
        ohos:below="$id:text"
        ohos:center_in_parent="true"
        ohos:left_padding="70vp"
        ohos:margin="10vp"
        ohos:right_padding="70vp"
        ohos:text="$string:actionNext"
        ohos:text_color="#ffffff"
        ohos:text_size="19fp"
        ohos:top_padding="8vp"/>

    <Button
        ohos:id="$+id:btnStartService"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_ability_hello_world"
        ohos:below="$id:text"
        ohos:center_in_parent="true"
        ohos:left_padding="70vp"
        ohos:margin="10vp"
        ohos:right_padding="70vp"
        ohos:text="启动service"
        ohos:text_color="#ffffff"
        ohos:text_size="19fp"
        ohos:top_padding="8vp"/>
    <Button
        ohos:id="$+id:btnDataProvider"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_ability_hello_world"
        ohos:below="$id:text"
        ohos:center_in_parent="true"
        ohos:left_padding="70vp"
        ohos:margin="10vp"
        ohos:right_padding="70vp"
        ohos:text="使用DataProvider"
        ohos:text_color="#ffffff"
        ohos:text_size="19fp"
        ohos:top_padding="8vp"/>

    <Button
        ohos:id="$+id:btnIntent"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="$graphic:background_ability_hello_world"
        ohos:below="$id:text"
        ohos:center_in_parent="true"
        ohos:left_padding="70vp"
        ohos:margin="10vp"
        ohos:right_padding="70vp"
        ohos:text="使用Intent"
        ohos:text_color="#ffffff"
        ohos:text_size="19fp"
        ohos:top_padding="8vp"/>
</DirectionalLayout>