{
  "app": {
    "bundleName": "com.chw.pktest",
    "vendor": "example",
    "version": {
      "code": 1000000,
      "name": "1.0.0"
    }
  },
  "deviceConfig": {},
  "module": {
    "package": "com.chw.pktest",
    "name": ".MyApplication",
    "mainAbility": "com.chw.pktest.MainAbility",
    "deviceType": [
      "phone"
    ],
    "reqPermissions": [
      {
        "name": "ohos.permission.READ_MEDIA",
        "reason": "需要存储权限",
        "usedScene": {
          "ability": [
            "com.chw.pktest.MainAbility"
          ],
          "when": "inuse"
        }
      },
      {
        "name": "ohos.permission.LOCATION_IN_BACKGROUND",
        "reason": "用于持续定位",
        "usedScene": {
          "ability": [
            "com.chw.pktest.MainAbility",
            "com.chw.pktest.MainAbility2"
          ],
          "when": "always"
        }
      },
      {
        "name": "com.example.myapplication.DataAbilityShellProvider.PROVIDER",
        "reason": "访问dataProvider需要的权限"
      },
      {
        "name": "ohos.permission.READ_USER_STORAGE",
        "reason": "访问dataProvider需要读取用户存储目录的权限"
      },
      {
        "name": "ohos.permission.COMMONEVENT_STICKY",
        "reason": "发送粘性公共事件",
        "usedScene": {
          "ability": [
            "com.chw.pktest.MainAbility2"
          ],
          "when": "inuse"
        }
      },
      {
        "name": "com.chw.pktest.permission",
        "reason": "带权限的事件"
      },
      {
        "name": "ohos.permission.PUBLISH_AGENT_REMINDER",
        "reason": "后台提醒权限"
      },
      {
        "name": "ohos.permission.CAMERA",
        "reason": "$string:permission_camera",
        "usedScene": {
          "ability": [
            "com.chw.pktest.MainAbility",
            "com.chw.pktest.MainAbility2"
          ],
          "when": "inuse"
        }
      },
      {
        "name": "ohos.permission.GET_WIFI_INFO"
      },
      {
        "name": "ohos.permission.WRITE_USER_STORAGE"
      },
      {
        "name": "ohos.permission.WRITE_MEDIA"
      },
      {
        "name": "ohos.permission.MEDIA_LOCATION"
      },
      {
        "name": "ohos.permission.LOCATION"
      },
      {
        "name": "ohos.permission.INTERNET",
        "reason": "非敏感权限"
      },
      {
        "name": "ohos.permission.GET_NETWORK_INFO"
      },
      {
        "name": "ohos.permission.SET_NETWORK_INFO"
      },
      {
        "name": "ohos.permission.CLEAN_BACKGROUND_PROCESSES",
        "reason": "非敏感权限,允许根据包名清理相关后台进程"
      },
      {
        "name": "ohos.permission.GET_BUNDLE_INFO",
        "reason": "查询其他应用的信息"
      },
      {
        "name": "ohos.permission.READ_CONTACTS",
        "reason": "请提供相关申请材料到应用市场申请相应权限证书,允许应用读取联系人数据"
      },
      {
        "name": "ohos.permission.WRITE_CONTACTS",
        "reason": "请提供相关申请材料到应用市场申请相应权限证书,允许应用添加、移除和更改联系人数据"
      },
      {
        "name": "ohos.permission.VIBRATE",
        "reason": "振动需要的权限"
      }
    ],
    "defPermissions": [
      {
        "name": "com.chw.pktest.permission",
        "grantMode": "system_grant",
        "availableScope": "signature",
        "label": "权限的简短描述",
        "description": "权限的想象描述"
      }
    ],
    "distro": {
      "deliveryWithInstall": true,
      "moduleName": "entry",
      "moduleType": "entry",
      "installationFree": false
    },
    "abilities": [
      {
        "skills": [
          {
            "entities": [
              "entity.system.home"
            ],
            "actions": [
              "action.system.home"
            ],
            "uris": [
              {
                "scheme": "http",
                "host": "www.xxx.com",
                "port": "8080",
                "path": "query/student/name",
                "type": "text/*"
              }
            ]
          }
        ],
        "orientation": "unspecified",
        "name": "com.chw.pktest.MainAbility",
        "icon": "$media:icon",
        "description": "$string:mainability_description",
        "configChanges": [
          "orientation",
          "fontSize",
          "layout"
        ],
        "label": "$string:entry_MainAbility",
        "type": "page",
        "launchType": "standard",
        "visible": true,
        "uri": "pk://www.chw.com/test/?q=s",
        "deviceCapability": [],
        "mission": "chw.pktest.com",
        "targetAbility": "",
        "permissions": [
          "ohos.permission.READ_USER_STORAGE"
        ]
      },
      {
        "permissions": [
          "com.example.myapplication.DataAbilityShellProvider.PROVIDER"
        ],
        "readPermission": "ohos.permission.READ_MEDIA",
        "writePermission": "ohos.permission.READ_MEDIA",
        "name": "com.chw.pktest.DataAbility",
        "icon": "$media:icon",
        "description": "$string:dataability_description",
        "type": "data",
        "visible": true,
        "uri": "dataability://com.example.myapplication.DataAbility"
      },
      {
        "name": "com.chw.pktest.ServiceAbility",
