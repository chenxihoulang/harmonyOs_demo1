{
  "app": {
    "bundleName": "com.chw.pktest",
    "vendor": "example",
    "version": {
      "code": 1000000,
      "name": "1.0.0"
    }
  },
  "deviceConfig": {},
  "module": {
    "package": "com.chw.pktest",
    "name": ".MyApplication",
    "mainAbility": "com.chw.pktest.MainAbility",
    "deviceType": [
      "phone"
    ],
    "reqPermissions": [
      {
        "name": "ohos.permission.READ_MEDIA",
        "reason": "需要存储权限",
        "usedScene": {
          "ability": [
            "com.chw.pktest.MainAbility"
          ],
          "when": "inuse"
        }
      },
      {
        "name": "ohos.permission.LOCATION_IN_BACKGROUND",
        "reason": "用于持续定位",
        "usedScene": {
          "ability": [
            "com.chw.pktest.MainAbility",
            "com.chw.pktest.MainAbility2"
          ],
          "when": "always"
        }
      }
    ],
    "distro": {
      "deliveryWithInstall": true,
      "moduleName": "entry",
      "moduleType": "entry",
      "installationFree": false
    },
    "abilities": [
      {
        "skills": [
          {
            "entities": [
              "entity.system.home"
            ],
            "actions": [
              "action.system.home"
            ],
            "uris": [
              {
                "scheme": "http",
                "host": "www.xxx.com",
                "port": "8080",
                "path": "query/student/name",
                "type": "text/*"
              }
            ]
          }
        ],
        "orientation": "unspecified",
        "name": "com.chw.pktest.MainAbility",
        "icon": "$media:icon",
        "description": "$string:mainability_description",
        "configChanges": [
          "orientation",
          "fontSize",
          "layout"
        ],
        "label": "$string:entry_MainAbility",
        "type": "page",
        "launchType": "standard",
        "visible": true,
        "uri": "pk://www.chw.com/test/?q=s",
        "deviceCapability": [],
        "mission": "chw.pktest.com",
        "targetAbility": ""
      },
      {
        "permissions": [
          "com.example.myapplication.DataAbilityShellProvider.PROVIDER"
        ],
        "readPermission": "ohos.permission.READ_MEDIA",
        "writePermission": "ohos.permission.READ_MEDIA",
        "name": "com.chw.pktest.DataAbility",
        "icon": "$media:icon",
        "description": "$string:dataability_description",
        "type": "data",
        "uri": "dataability://com.example.myapplication.DataAbility"
      },
      {
        "name": "com.chw.pktest.ServiceAbility",
        "permissions": [
          "ohos.permission.KEEP_BACKGROUND_RUNNING"
        ],
        "icon": "$media:icon",
        "description": "$string:serviceability_description",
        "type": "service",
        "backgroundModes": [
          "dataTransfer",
          "location"
        ]
      },
      {
        "orientation": "unspecified",
        "name": "com.chw.pktest.MainAbility2",
        "icon": "$media:icon",
        "description": "$string:mainability2_description",
        "label": "$string:entry_MainAbility2",
        "type": "page",
        "launchType": "standard"
      },
      {
        "backgroundModes": [
          "dataTransfer"
        ],
        "name": "com.chw.pktest.ServiceAbility2",
        "icon": "$media:icon",
        "description": "$string:serviceability2_description",
        "type": "service"
      },
      {
        "orientation": "unspecified",
        "name": "com.chw.pktest.MainAbility3",
        "icon": "$media:icon",
        "description": "$string:mainability3_description",
        "label": "$string:entry_MainAbility3",
        "type": "page",
        "launchType": "standard"
      },
      {
        "orientation": "unspecified",
        "name": "com.chw.pktest.HelloWorldAbility",
        "skills": [
          {
            "actions": [
              "action.hello",
              "action.second"
            ]
          }
        ],
        "icon": "$media:icon",
        "description": "$string:helloworldability_description",
        "label": "$string:entry_HelloWorldAbility",
        "type": "page",
        "launchType": "standard"
      }
    ]
  }
}